{
    "compilerOptions": {
        "target": "es2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "server.ts", "index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
